<%= render 'shared/show_google_map' %>

<div class="container">
  <div class="show_problem ">
    <h2 align='center'><%= t ".name_label" %>: <%= @problem.title %></h2>
    <p><b><%= t ".description_label" %>:</b> <%= @problem.description %></p>
    <p><b><%= t ".status_label" %>: </b> <%= enum_l(@problem, :status) %></p>
    <p><b><%= t ".district_label" %>: </b> <%= enum_l(@problem, :district) %></p>
    <p>
      <% @problem.images.each do | image | %>
        <%= link_to image_path(image.url(:large), data: { lightbox: 'roadtrip' }) do %>
          <%= image_tag image.url(:thumb) %>
        <% end %>
      <% end %>
    </p>
  </div>

  <section data-lat="<%= @problem.latitude %>" data-lng="<%= @problem.longitude %>">
    <div id='map_canvas'></div>
  </section>

  <%= render 'comments/comment' %>
</div>
