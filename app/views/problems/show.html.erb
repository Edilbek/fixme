<h1>Problem</h1>
<p>Title: <%= @problem.title %></p>
<p>Address: <%= @problem.address %></p>
<p>Description: <%= @problem.description %></p>
<p>Latitude: <%= @problem.latitude %></p>
<p>Longitude: <%= @problem.longitude %></p>
<p>Description: <%= @problem.description %></p>
<p>Images: <%= image_tag @problem.image.url(:medium), class: "image-show" if @problem.image? %></p>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  });
</script>
