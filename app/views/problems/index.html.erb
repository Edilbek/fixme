<h3 align='center'><%=current_user.email %></h3>
<br>
<div class="container">
  <% @user = current_user %>
  <% @user.problems.each do |problem| %>
    <div class="row">
      <div class="col-md-4 problem">
        <%= link_to "#{problem.description}", user_problem_path(@user, problem.id) %><br>
        <%= link_to image_tag "#{problem.images.first.url(:thumb)}" if problem.images? %>
      </div>
    </div>
  <% end %>
</div>
