<script async defer src="http://maps.google.com/maps/api/js?key=AIzaSyDgxr_BEXzQRpEtjNbEH5w4EQdgm0GbBGM&callback=initMap"></script>
<h1 align='center'>Create Problem</h1>
<div class="container">
  <%= form_for [current_user, @problem], html: { multipart: true } do |f| %>
    <%= f.hidden_field :latitude, id: "problem-lat" %>
    <%= f.hidden_field :longitude, id: "problem-lng" %>
    <div class="row adding-page">
      <div class="col-sm-4 description-problem">
        <%= f.label :title %><br>
        <hr>
        <%= f.text_field :title, class: "form-control", placeholder: 'Title...' %>
      </div>

      <div class="col-sm-4 description-problem">
        <%= f.label :description %><br>
        <hr>
        <%= f.text_area :description, class: "form-control", placeholder: 'Description...' %>
      </div>

      <!-- <div class="col-sm-3 description-problem">
        <%= f.label :address %><br>
        <hr>
        <%= f.text_field :address, class: "form-control", placeholder: 'Address...' %>
      </div> -->

      <div class="col-sm-4 image-problem">
        <%= f.label :image %><br>
        <hr>
        <%= f.file_field :image %><br>
      </div>

    </div>
    <section>
      <h3 align='center' class="choose-place-label">Choose problem place</h3>
      <div id='map_canvas'></div>
      <div id="current">Nothing yet...</div>
    </section>

    <div class="row save-problem">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
