<h1 align='center'>Create Problem</h1>
<%= form_for [current_user, @problem] do |f| %>
  <% if @problem.errors.any? %>
   <% @problem.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
  <% end %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save" %>
<% end %>
