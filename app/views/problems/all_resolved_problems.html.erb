<div class="container">
  <h2 class="my-4">
    Исправлены
  </h2>
  <div class="row">
    <% @all_resolved_problems.each do |resolved_problem| %>
      <%= link_to problem_path(resolved_problem.id) do %>
        <div class="col-lg-3 col-md-4 col-sm-6 problem_show">
          <div class="card h-100">
            <div class="card-img-top">
              <%= link_to image_tag "#{resolved_problem.images.first.url(:thumb)}" if resolved_problem.images? %>
            </div>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to "#{resolved_problem.title}", problem_path(resolved_problem.id)%>
              </h4>
              <div class="card-text">
                <%= link_to truncate("#{resolved_problem.description}", length: 100), problem_path(resolved_problem.id)%>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
