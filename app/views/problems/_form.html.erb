<div class="container">
  <%= simple_form_for [current_user, @problem], html: { multipart: true } do |f| %>
    <%= f.hidden_field :latitude, id: "problem-lat" %>
    <%= f.hidden_field :longitude, id: "problem-lng" %>
    <div class="row adding-page">
      <div class="col-sm-4 description-problem">
        <%= f.label 'Название'%><br>
        <hr>
        <%= f.input :title, class: "form-control", placeholder: 'Название...', label: false %>
      </div>

      <div class="col-sm-4 description-problem">
        <%= f.label 'Описание' %><br>
        <hr>
        <%= f.input :description, :as => :text, class: "form-control", placeholder: 'Описание...', label: false %>
      </div>

      <div class="col-sm-4 image-problem">
        <%= f.label 'Изображения' %><br>
        <hr>
        <%= f.input :images, multiple: true, class: "images", label: false, as: :file, error: "Картинки: Не могут быть пустыми" %><br>
      </div>
      <%= f.hidden_field :status, id: "status"%>
    </div>
    <section>
      <h3 align='center' class="choose-place-label">Выберите место проблемного участка</h3>
      <div id='map_canvas'></div>
      <div id="current">Еще не выбрали...
      </div>
    </section>


    <div class="save-problem col-sm-12">
      <div class="text-center">
        <%= f.button :button, "Добавить", class: "btn btn-primary create_problem" %>
      </div>
    </div>
  <% end %>
</div>
