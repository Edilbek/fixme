<div align="center">
  <div class="signup_page">
    <h2>Регистрация</h2>
    <div class="user-signup-page">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>

        <div class="form-group">
          <%= f.input :email, autofocus: false, placeholder: 'Email', label: false %>
        </div>

        <div class="form-group">
          <%= f.input :password, autocomplete: "off", placeholder: 'Password', label: false , label: false%>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation', label: false %>
        </div>

        <div class="actions">
          <%= f.button :button, "Регистрация", class: "form-control btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
