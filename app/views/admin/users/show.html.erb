<div class="row error_flashes">
  <div class="col-md-12">
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%= "#{name}" %>'>
        <button type="button" class="close" data-dismiss="alert"> &times; </button>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)%>
      </div>
    <% end %>
  </div>
</div>

<h1><%= @user.email %></h1>
<%= @user.role %>
<% @user.problems.each do |prob| %>
    Problems of this user: <%= link_to "#{prob.title}", problem_path(prob.id) %>
<% end %>
